<h1>Product Show</h1>
<a href='/products'>
  Product List
</a>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>In Stock ?</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @product.name %></td>
        <td><%= @product.price %></td>
        <td><%= @product.description %></td>
        <td><%= @product.status == true ? "Available" : "Not Available" %></td>
        <td>
          <a href="/products/<%= @product.id %>/edit">
            Edit
          </a>
        </td>
      </tr>
  </tbody>
</table>