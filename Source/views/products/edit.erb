<form action="/products/<%= @product.id %>" method='post'>
  <fieldset>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <legend>Edit Product Form</legend>
      <div class="row">
        <div class="small-9 columns">
          <label>Name
            <input id="product_name" name="product[name]" type="text" value="<%=@product.name %>">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="small-9 columns">
          <label>Description
            <input id="product_name" name="product[description]" type="text" value="<%=@product.description %>">
          </label>
        </div>
      </div>

      <div class="row">
        <div class="small-9 columns">
          <label>Price
            <input id="product_name" name="product[price]" type="text" value="<%=@product.price %>">
          </label>
        </div>
      </div>

      
    <input type="submit" value="Update Product" class='button tiny radius' style='border-radius: 8px;'>
  </fieldset>  
</form>



